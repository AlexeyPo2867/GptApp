<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GptApp.Email">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Введите e-mail:" TextColor="Black" FontSize="Small" />
            <Entry x:Name="UrlEntry" BackgroundColor="Black"
               TextColor ="Lime" Placeholder="E-mail: " Margin="0,10" />

            <Button Text="Отправить" BorderWidth = "1" BackgroundColor = "Green" 
                TextColor ="Yellow" BorderColor="Lime" CornerRadius="10" HorizontalOptions="Center"
                WidthRequest="150" HeightRequest="40" Clicked="OnSendToEmail" Margin="0,10" />

            <Button Text="Назад" BorderWidth = "1" BackgroundColor = "Green" 
                TextColor ="Yellow" BorderColor="Lime" CornerRadius="10" HorizontalOptions="Center"
                WidthRequest="150" HeightRequest="40" Clicked="OnBack" Margin="0,10" />
            
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>